<?xml version="1.0" encoding="UTF-8"?>
<actionExtension>

    <!-- Action extension version, required -->
    <version>1.0</version>

    <!-- Action extension ID, required -->
    <id>com.example.application</id>

    <!-- Configuration, optional -->
    <configuration>
        <!-- Default catalog ID, default to empty -->
        <defaultCatalog>core.catalog.others</defaultCatalog>

        <!-- Qt translation contexts:
             - text (optional)
             - class (optional)
             - description (optional)
        -->
        <translationContext
            text="Application::ActionText"
            class="Application::ActionClass"
            description="Application::ActionDescription"
        />

        <!-- Pre-defined variables -->
        <vars>
            <!-- Variable item
                 - key (required)
                 - value (required)
            -->
            <var key="APP_NAME" value="Application" />

            <!-- reserved keys: 
                 - _ID_: id
                 - _VERSION_: version
                 - _IDENTIFIER_: identifier
                 - _FILENAME_: file name
                 - _FILEBASENAME_: file base name
            -->
        </vars>
    </configuration>

    <!-- Declaration: core items -->
    <items>
        <!-- Action item: action/menu,menuBar,toolBar/group/phony
             - id (required)
             - text (optional): action text, default: last part of id with space separated (big-camel style)
             - description (optional)
             - icon (optional): icon id, default: id
             - class (optional): action category
             - shortcut/shortcuts: action only (optional)
             - catalog: catalog parent id (optional)
             - topLevel: top level item tag, menu only
             - textTr (optional): text translation context
             - classTr (optional): action category translation text
             - descriptionTr (optional): description translation context
        -->

        <!-- Example: core actions -->
        <action id="core.openFile" text="Open File" class="File" shortcut="Ctrl+N" />
        <action id="core.saveFile" text="Save File" class="File" shortcut="Ctrl+S" />

        <!-- Example: configurable top level item -->
        <menu id="core.mainMenu" topLevel="true" />
        <menu id="core.mainToolBar" topLevel="true" />

        <!-- Example: catalogs -->
        <phony id="core.catalog.plugins" />
        <phony id="core.catalog.other" />
    </items>

    <!-- Declaration: core layouts -->
    <layouts>
        <menu id="core.mainMenu">
            <menu id="core.file">
                <group id="core.fileOpenActions">
                    <action id="core.openFile" />
                    <action id="core.saveFile" />
                </group>
            </menu>
            <menu id="core.help">
                <action id="core.documentations" />
                <separator />
                <group id="core.aboutActions">
                    <action id="core.aboutApp" text="About ${APP_NAME}" />
                    <action id="core.aboutQt" />
                </group>
            </menu>
        </menu>

        <menu id="core.mainToolBar">
            <action id="core.openFile" />
            <action id="core.saveFile" />
        </menu>
    </layouts>

</actionExtension>